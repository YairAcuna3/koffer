generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String    @unique
  password  String
  bio       String?
  photo     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
}

model Project {
  id           String         @id @default(cuid())
  name         String?
  type         String?
  startAt      DateTime?
  endAt        DateTime?
  state        String         @default("Sin iniciar")
  description  String?
  notes        String?
  isConsider   Boolean        @default(false)
  order        Int            @default(0)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  userId       String
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags         Tag[]
  stateHistory StateHistory[]
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @unique
  projects Project[]
}

model StateHistory {
  id        String    @id @default(cuid())
  state     String
  changedAt DateTime?
  projectId String
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
}
